@model HomeListViewModel

@Html.Partial("NavBarSummary")
<!-- END nav -->
    
<section class="home-slider owl-carousel">
    @foreach(var item in Model.Sliders)
    {
        @Html.Partial("HomeSliderSummary", item)
    }
</section>

<section class="ftco-section">
    <div class="container">
        <div class="row d-flex">
            <div class="col-md-5 order-md-last wrap-about align-items-stretch">
                <div class="wrap-about-border ftco-animate">
                    <div class="img" style="background-image: url(images/about.jpg); border"></div>
                    <div class="text">
                        <h3>
                            IParse, начать анализировать контент легко!
                        </h3>
                        <p>
                            IParse разрабатывается с прицелом на парсинг 
                            и обработку больших объемов информации. Мы стремимся выпускать качественный и 
                            лучший на рынке продукт, который объединяет в себе более 10 лет опыта
                            работы в индустрии парсинга. IParse активно развивается используя передовые
                            технологии, что в конечном итоге дает вам больше результатов еще быстрее.
                        </p>
                        <p><a asp-action="AboutParser" asp-controller="Parser" class="btn btn-primary py-3 px-4">Подробнее о парсинге</a></p>
                    </div>
                </div>
            </div>
            <div class="col-md-7 wrap-about pr-md-4 ftco-animate">
                <h2 class="mb-4">О наших преимуществах</h2>
                <p>В своей работе мы ориентируемся на потребности клиентов и готовы к реализации новых возможностей, а также адаптации функционала сервиса, специально для Вас!</p>
                <div class="row mt-5">
                    @for (int i = 0; i <= 2; i+=2)
					{
						<div class="col-lg-6">
								@Html.Partial("FeaturesItemSummary", Model.FeaturesItems.ElementAt(i))
								@Html.Partial("FeaturesItemSummary", Model.FeaturesItems.ElementAt(i+1))
                    	</div>
					}
                </div>
            </div>
        </div>
    </div>
</section>
		
		<section class="ftco-intro ftco-no-pb img" style="background-image: url(images/bg_3.jpg);">
    	<div class="container">
    		<div class="row justify-content-center mb-5">
          <div class="col-md-10 text-center heading-section heading-section-white ftco-animate">
            <h2 class="mb-0">Почему Стоит Выбрать Именно Нас</h2>
          </div>
        </div>	
    	</div>
    </section>

		<section class="ftco-counter" id="section-counter">
    	<div class="container">
    		<div class="row d-md-flex align-items-center justify-content-center">
    			<div class="wrapper">
    				<div class="row d-md-flex align-items-center">
						@foreach(var item in Model.DataCounters)
						{
							@Html.Partial("DataCounterSummary", item)
						}
	          		</div>
          		</div>
        	</div>
    	</div>
    </section>

    <section class="ftco-section">
			<div class="container">
				<div class="row justify-content-center mb-5 pb-2">
          <div class="col-md-8 text-center heading-section ftco-animate">
            <h2 class="mb-4">Для Чего Использовать Наш Сервис</h2>
            <p>Возможно вы и не догадывались, насколько легко и быстро можно решить множество проблем с помощью нашего сервиса</p>
          </div>
        </div>
				<div class="row no-gutters">
					@foreach( var item in Model.GuttersItems)
					{
						@Html.Partial("GuttersItemSummary", item)
					}
				</div>
			</div>
		</section>
		

    <section class="ftco-section ftco-consult ftco-no-pt ftco-no-pb" style="background-image: url(images/bg_5.jpg);" data-stellar-background-ratio="0.5">
    	<div class="overlay"></div>
    	<div class="container">
    		<div class="row justify-content-end">
    			<div class="col-md-6 py-5 px-md-5">
    				<div class="py-md-5">
		          <div class="heading-section heading-section-white ftco-animate mb-5">
		            <h2 class="mb-4">Задать Вопрос</h2>
		            <p>Если у вас появились какие-то вопросы, заплоните форму и мы ответим вам.</p>
		          </div>
				  <div asp-validation-summary="All" class="text-danger"></div>
		          <form asp-action="RequestQuestion" asp-controller="RequestQuestion" method="post" class="appointment-form ftco-animate">
		    				<div class="d-md-flex">
			    				<div class="form-group">
			    					<input asp-for="FirstName" class="form-control" placeholder="First Name">
			    				</div>
			    				<div class="form-group ml-md-4">
			    					<input asp-for="LastName" class="form-control" placeholder="Last Name">
			    				</div>
		    				</div>
		    				<div class="d-md-flex">
		    					<div class="form-group">
			    					<input asp-for="Email" class="form-control" placeholder="Email Address">
								</div>
								<div class="form-group ml-md-4">
									<input asp-for="Phone" class="form-control" placeholder="Phone">
								</div>
		    				</div>
		    				<div class="d-md-flex">
		    					<div class="form-group">
			              			<textarea asp-for="Message" cols="30" rows="2" class="form-control" placeholder="Message"></textarea>
								</div>
								<div class="form-group ml-md-4">
									<input type="submit" value="Задать вопрос" class="btn btn-white py-3 px-4">
								</div>
		    				</div>
		    			</form>
		    		</div>
    			</div>
        </div>
    	</div>
    </section>

	<section class="ftco-section testimony-section">
      <div class="container">
        <div class="row justify-content-center mb-5">
          <div class="col-md-8 text-center heading-section ftco-animate">
            <h2 class="mb-4">Вот что говорят клиенты</h2>
            <p>Достаточно просто взгялнуть что говорят о нас клиенты что бы убедиться в своем выборе.</p>
          </div>
        </div>
        <div class="row ftco-animate justify-content-center">
          <div class="col-md-12">
            <div class="carousel-testimony owl-carousel">
                @foreach (var item in Model.ClientCarousels)
                {
                    @Html.Partial("ClientCarouselSummary", item)
                }
            </div>
          </div>
        </div>
      </div>
    </section>

		
    <footer class="ftco-footer ftco-bg-dark ftco-section">
            
    </footer>
    
