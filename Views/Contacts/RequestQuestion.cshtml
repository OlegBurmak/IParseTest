@model RequestQuestion

@Html.Partial("NavBarSummary")

<section class="ftco-section contact-section">
  <div class="container">
    <div class="row d-flex mb-5 contact-info justify-content-center">
      <div class="col-md-8">
        <div class="row mb-5">
		      @foreach(var item in Model.ContactsDatas)
          {
            @Html.Partial("ContactsDataSummary", item)
          }
		    </div>
      </div>
    </div>
    <div class="row block-9 justify-content-center mb-5">
      <div class="col-md-8 mb-md-5">
        <h2 class="text-center">Если у вас есть вопросы<br>заполните форму и мы с вами свяжемся</h2>
        <div asp-validation-summary="All" class="text-danger"></div>
        <form asp-action="RequestQuestion" asp-controller="Contacts" method="post" class="ftco-animate bg-light p-5 contact-form">
          <div class="d-md-flex">
            <div class="form-group">
                <input asp-for="FirstName" class="form-control" placeholder="First Name">
            </div>
            <div class="form-group ml-md-4">
                <input asp-for="LastName" class="form-control" placeholder="Last Name">
            </div>
          </div>
          <div class="d-md-flex">
            <div class="form-group">
                <input asp-for="Email" class="form-control" placeholder="Email Address">
            </div>
            <div class="form-group ml-md-4">
                <input asp-for="Phone" class="form-control" placeholder="Phone">
            </div>
          </div>
          <div class="d-md-flex">
              <div class="form-group">
                  <textarea asp-for="Message" cols="30" rows="2" class="form-control" placeholder="Message"></textarea>
              </div>
              <div class="form-group ml-md-4">
                  <input type="submit" value="Задать вопрос" class="btn btn-primary py-3 px-4">
              </div>
          </div>
        </form>
  </div>       
</section>