@model ClientCarousel

<div class="item">
    <div class="testimony-wrap d-flex">
        <div class="user-img" style="background-image: url(images/@Model.Image)"></div>
        <div class="text pl-4">
            <span class="quote d-flex align-items-center justify-content-center">
                <i class="icon-quote-left"></i>
            </span>
            <p class="name"><b>@Model.CompanyName</b></p>
            <p>@Model.Description</p>
            <p class="name">@Model.ClientName</p>
            <span class="position">@Model.Position</span>
        </div>
    </div>
</div>