@model HomeSlider

<div class="slider-item" style="background-image:url(images/@Model.Image);">
    <div class="overlay"></div>
    <div class="container">
        <div class="row no-gutters slider-text align-items-center justify-content-start" data-scrollax-parent="true">
            <div class="col-md-7 ftco-animate">
                <span class="subheading">@Model.Heading</span>
                <h1 class="mb-4">@Model.Description</h1>
                <p><a asp-action="@Model.ButtoAction" class="btn btn-primary px-4 py-3 mt-3">@Model.ButtonName</a></p>
            </div>
        </div>
    </div>
</div>